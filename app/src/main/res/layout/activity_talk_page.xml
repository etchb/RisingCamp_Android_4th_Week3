<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF252525"
    tools:context=".TalkPageActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/tlblay_talk_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/topgray"
        app:contentInsetStart="0dp"
        android:layout_margin="0dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:layout_constraintVertical_bias="0">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tlb_talk_page"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/topgray"
            app:title="Name"
            app:contentInsetStart="0dp"
            app:titleTextColor="@color/white">
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/talk_page_rcyview_chat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tlblay_talk_page"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/linlay_bttm"
        android:paddingTop="5dp"
        app:layout_constraintVertical_bias="0"
        tools:listitem="@layout/chat_recycler" />
    <LinearLayout
        android:id="@+id/linlay_bttm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1"
        android:background="@drawable/talk_page_textbox_border_top"
        android:paddingTop="1dp"
        android:layout_margin="0dp">
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/talk_page_btn_add"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:background="#FF2D2D2D"
            android:layout_marginLeft="5dp"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/talk_plus"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/talk_page_edt_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:maxLines="4"
            android:background="@null"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:layout_gravity="center_vertical"
            android:inputType="textMultiLine" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_margin="0dp"
            android:background="#FF2D2D2D"
            android:scaleType="centerInside"
            android:src="@drawable/talk_emoji" />
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/talk_page_btn_send_sharp"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:background="#FF2D2D2D"
            android:scaleType="centerInside"
            android:src="@drawable/talk_sharp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>